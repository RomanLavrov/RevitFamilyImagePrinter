<UserControl
    x:Class="RevitFamilyImagePrinter.SinglePrintOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitFamilyImagePrinter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="240"
    Height="240"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded">
    <Grid 
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox
                BorderBrush="#d1ecff"
                Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="0.22*"/>
                    </Grid.RowDefinitions>
                    <Grid
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    MinWidth="200"
                    Margin="5">
                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="Margin" Value="0 0 10 0"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="MinHeight" Value="20"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="MaxLength" Value="7"/>
                                <EventSetter Event="KeyDown" Handler="TextBox_KeyDown"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        Content="Image size" />
                        <TextBox
                    Grid.Column="1"
                    Grid.Row="0"
                    x:Name="SizeValue"
                    Text="64"
                    MinHeight="20"/>
                        <Label
                    Grid.Column="0"
                    Grid.Row="1"
                    Content="Scale" />
                        <TextBox
                    Grid.Column="1"
                    Grid.Row="1"
                    x:Name="ScaleValue"
                    Text="64"/>
                        <Label
                    Grid.Column="0"
                    Grid.Row="2"
                    Content="Zoom (%)" />
                        <TextBox
                    Grid.Column="1"
                    Grid.Row="2"
                    x:Name="ZoomValue"
                    Text="90"/>
                        <Label
                    Grid.Column="0"
                    Grid.Row="3"
                    Content="Image resolution" />
                        <ComboBox 
                    Grid.Row="3"
                    Grid.Column="1"
                    Name="ResolutionValue"
                    MinHeight="20" 
                    SelectedIndex="0"
                    VerticalAlignment="Center"
                    SelectionChanged="ComboBox_SelectionChanged">
                            <TextBlock Tag="72">Web Low</TextBlock>
                            <TextBlock Tag="150">Web High</TextBlock>
                            <TextBlock Tag="300">Print Low</TextBlock>
                            <TextBlock Tag="600" Visibility="Collapsed">Print High</TextBlock>
                        </ComboBox>
                        <Label
                    Grid.Column="0"
                    Grid.Row="4"
                    Content="Detail Level" />
                        <ComboBox 
                    Grid.Row="4"
                    Grid.Column="1"
                    Name="DetailLevelValue"
                    MinHeight="20" 
                    SelectedIndex="1"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left" 
                    SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBox.Resources>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Orientation" Value="Horizontal"/>
                                </Style>
                                <Style TargetType="Image">
                                    <Setter Property="Width" Value="17"/>
                                    <Setter Property="Height" Value="13"/>
                                    <Setter Property="Margin" Value="0 0 5 0"/>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBoxItem Tag="Coarse">
                                <StackPanel>
                                    <Image Source="pack://application:,,,/RevitFamilyImagePrinter;component/Resources/coarse.png"/>
                                    <TextBlock>Coarse</TextBlock>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem  Tag="Medium">
                                <StackPanel>
                                    <Image Source="pack://application:,,,/RevitFamilyImagePrinter;component/Resources/medium.png"/>
                                    <TextBlock>Medium</TextBlock>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem  Tag="Fine">
                                <StackPanel>
                                    <Image Source="pack://application:,,,/RevitFamilyImagePrinter;component/Resources/fine.png"/>
                                    <TextBlock>Fine</TextBlock>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <Grid 
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    Margin="3 3 0 3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.62*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Content="Image format" />
                        <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="-5 0 0 0"/>
                                </Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Margin" Value="3 0 0 0"/>
                                    <EventSetter Event="Checked" Handler="RadioButton_Checked"/>
                                </Style>
                            </StackPanel.Resources>
                            <RadioButton IsChecked="True" Tag=".png" Name="RadioButtonPng">
                                <RadioButton.Content>
                                    <TextBlock Margin="-3 0 0 0 ">PNG</TextBlock>
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton  Tag=".jpg"  Name="RadioButtonJpg">
                                <RadioButton.Content>
                                    <TextBlock Margin="-3 0 0 0 ">JPG</TextBlock>
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Tag=".bmp" Name="RadioButtonBmp">
                                <RadioButton.Content>
                                    <TextBlock Margin="-3 0 0 0 ">BMP</TextBlock>
                                </RadioButton.Content>
                            </RadioButton>
                        </StackPanel>
                    </Grid>
                </Grid>
            </GroupBox>
            <Grid  Grid.Row="1" >
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="75"/>
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    x:Name="btnApply"
                    Click="Button_Click_Apply">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="12" Height="12" Margin="0 0 5 0">
